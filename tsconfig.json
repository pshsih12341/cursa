{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"jsx": "react-jsx",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"outDir": "./build",
		"baseUrl": "./src",
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true
	},
	"include": ["src", "public/manifest.json", "global.d.ts"],
	"exclude": ["node_modules"]
}
